/*Q.1 Write a Program to print the below pattern using nested for loop.
1
2 1
3 2 1
4 3 2 1
5 4 3 2 1 
*/
#include <stdio.h>

int main() {
  int i,j;

  for(i=1;i<=5;i++){
    for(j=i;j>=1;j--){
      printf("%d ",j);
    }
    printf("\n");
  }
}

/*
Q.2 Write a Program to print the below pattern using nested for loop.
5
4 5
3 4 5
2 3 4 5
1 2 3 4 5
*/
#include<stdio.h>

int main(){
  int i,j;

  for(i=5;i>=1;i--){
    for(j=i;j<=5;j++){
      printf("%d",j);
    }
    printf("\n");
  }
}

/*
Q.3 Write a Program to print the below pattern using nested for loop.
5
4 4 
3 3 3
2 2 2 2
1 1 1 1 1
*/
#include<stdio.h>

int main(){
  int i,j;

  for(i=5;i>=1;i--){
    for(j=5;j>=i;j--){
      printf("%d ",i);
    }
    printf("\n");
  }
}

/*
